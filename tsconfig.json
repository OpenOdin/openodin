{
    "extends": "@tsconfig/node12/tsconfig.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "outDir": "build",
        "module": "commonjs",
        "target": "es2020",
        "esModuleInterop": true,
        "declaration": true,
        "lib": [
            "dom"
        ]
    },
    "files": [
        "./index.ts"
    ],
    "exclude": [
        "./test",
        "./node_modules",
        "./build",
        "./build-sdk",
        "./build-pkg",
        "./dist"
    ],
    "include": [
        "src/**/*"
    ]

}
